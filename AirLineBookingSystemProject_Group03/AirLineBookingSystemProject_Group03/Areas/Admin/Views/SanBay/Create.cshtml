@model AirLineBookingSystemProject_Group03.Models.SANBAY

@{
    ViewBag.Title = "Thêm Sân Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-success text-white py-3">
            <h5 class="m-0 fw-bold text-uppercase"><i class="fas fa-plus-circle me-2"></i> Thêm Sân Bay</h5>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">Mã Sân Bay (3 ký tự)</label>
                    @Html.EditorFor(model => model.MASANBAY, new { htmlAttributes = new { @class = "form-control text-uppercase fw-bold", placeholder = "VD: SGN, HAN...", maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.MASANBAY, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">Tên Sân Bay</label>
                    @Html.EditorFor(model => model.TENSANBAY, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Tân Sơn Nhất" } })
                    @Html.ValidationMessageFor(model => model.TENSANBAY, "", new { @class = "text-danger small" })
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-secondary">Thành Phố</label>
                        @Html.EditorFor(model => model.THANHPHO, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Hồ Chí Minh" } })
                        @Html.ValidationMessageFor(model => model.THANHPHO, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-secondary">Đất Nước</label>
                        @Html.EditorFor(model => model.DATNUOC, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Việt Nam" } })
                        @Html.ValidationMessageFor(model => model.DATNUOC, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg fw-bold shadow-sm">
                        <i class="fas fa-save me-2"></i> LƯU DỮ LIỆU
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-light text-secondary">Hủy bỏ</a>
                </div>
            }
        </div>
    </div>
</div>