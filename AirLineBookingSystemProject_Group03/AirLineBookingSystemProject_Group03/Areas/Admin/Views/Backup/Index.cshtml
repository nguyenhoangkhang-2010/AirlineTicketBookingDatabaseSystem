@{
    ViewBag.Title = "Backup Cơ Sở Dữ Liệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Backup & Restore Database</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" action="@Url.Action("Backup", "Backup", new { area = "Admin" })">
    <button class="btn btn-primary">
        Backup Database
    </button>
</form>

<p class="text-muted mt-2">
    File backup lưu tại: <b>D:\DaiHoc\HocKy1_Nam2025\HQT_CSDL\BACKUP</b>
</p>
<hr />

<h4>Danh sách file backup</h4>

@if (ViewBag.BackupFiles != null && ViewBag.BackupFiles.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên file</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (string file in ViewBag.BackupFiles)
            {
                <tr>
                    <td>@file</td>
                    <td>
                        <form method="post"
                              action="@Url.Action("Restore", "Backup", new { area = "Admin" })"
                              onsubmit="return confirm('Bạn chắc chắn muốn RESTORE CSDL?');">
                            <input type="hidden" name="fileName" value="@file" />
                            <button class="btn btn-danger btn-sm">
                                Restore
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Chưa có file backup nào.</p>
}
