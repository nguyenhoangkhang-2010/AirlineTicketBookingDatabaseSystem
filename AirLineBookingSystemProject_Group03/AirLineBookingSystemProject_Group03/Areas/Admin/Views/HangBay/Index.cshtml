@model IEnumerable<AirLineBookingSystemProject_Group03.Models.HANGHANGKHONG>

@{
    ViewBag.Title = "Quản lý Hãng bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-box {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        padding: 20px;
        border-top: 4px solid #1b5e20;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        padding: 0;
        line-height: 32px;
        text-align: center;
        border-radius: 50%;
        margin: 0 2px;
        transition: all 0.3s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 5px rgba(0,0,0,0.2);
        }
</style>

<div class="container-fluid mt-4">
    <div class="card-box">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-uppercase mb-0" style="color: #1b5e20;">
                <i class="fas fa-building me-2"></i> Danh Sách Hãng Hàng Không
            </h4>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 150px;">Mã Hãng</th>
                        <th>Logo hãng</th>
                        <th>Tên Hãng Hàng Không</th>

                        <th class="text-center">Quy mô (Số chuyến)</th>
                        <th class="text-center" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border px-3 py-2">@item.MAHANG</span>
                            </td>
                            <td class="text-center" style="width: 120px;">
                                @if (!string.IsNullOrEmpty(item.LOGO))
                                {
                                    <img src="@item.LOGO" alt="Logo"
                                         class="img-fluid"
                                         style="width: 80px; height: 50px; object-fit: contain;"
                                         onerror="this.src='https://via.placeholder.com/80x50?text=Lỗi'" />
                                }
                                else
                                {
                                    <span class="text-muted small">--</span>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-success" style="font-size: 1rem;">
                                    <i class="fas fa-plane me-2"></i> @item.TENHANG
                                </div>
                            </td>

                            <td class="text-center">
                                @{ var count = item.CHUYENBAYs != null ? item.CHUYENBAYs.Count : 0; }
                                @if (count > 0)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success">
                                        @count chuyến bay
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted small">Chưa có chuyến nào</span>
                                }
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.MAHANG.Trim() })" class="btn btn-outline-primary btn-action" title="Sửa">
                                    <i class="fas fa-pen font-size-12"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MAHANG.Trim() })" class="btn btn-outline-danger btn-action" title="Xóa">
                                    <i class="fas fa-trash font-size-12"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p>Chưa có dữ liệu hãng bay.</p>
            </div>
        }
    </div>
</div>