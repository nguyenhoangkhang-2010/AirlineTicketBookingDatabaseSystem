@model AirLineBookingSystemProject_Group03.Models.HANGHANGKHONG

@{
    ViewBag.Title = "Xóa Hãng Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card border-danger shadow" style="max-width: 500px; margin: 0 auto;">
        <div class="card-header bg-danger text-white py-3 text-center">
            <h5 class="m-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>XÁC NHẬN XÓA</h5>
        </div>
        <div class="card-body text-center p-4">
            <div class="text-danger mb-3">
                <i class="fas fa-building fa-4x mb-2"></i>
                <i class="fas fa-times position-absolute text-dark" style="font-size: 2rem; margin-left: -15px; margin-top: 20px;"></i>
            </div>

            <h4 class="text-dark fw-bold">@Model.TENHANG</h4>
            <p class="text-muted mb-4">Mã hãng: <strong>@Model.MAHANG</strong></p>

            @if (Model.CHUYENBAYs.Any())
            {
                <div class="alert alert-warning small text-start">
                    <i class="fas fa-lock me-1"></i>
                    <strong>Không thể xóa:</strong> Hãng này đang có <b>@Model.CHUYENBAYs.Count()</b> chuyến bay trong hệ thống. Bạn cần xóa các chuyến bay đó trước.
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary w-100">Quay lại</a>
                </div>
            }
            else
            {
                <div class="alert alert-danger small text-start">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    Bạn có chắc chắn muốn xóa hãng bay này không? Hành động này không thể hoàn tác.
                </div>
                <div class="mt-4 d-flex justify-content-center gap-2">
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Hủy bỏ</a>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash me-2"></i>Đồng ý Xóa
                        </button>
                    }
                </div>
            }
        </div>
    </div>
</div>