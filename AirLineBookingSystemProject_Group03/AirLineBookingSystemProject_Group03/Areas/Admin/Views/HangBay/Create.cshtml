@model AirLineBookingSystemProject_Group03.Models.HANGHANGKHONG

@{
    ViewBag.Title = "Thêm Hãng Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-success text-white py-3">
            <h5 class="m-0 fw-bold text-uppercase"><i class="fas fa-plus-circle me-2"></i>Thêm Hãng Bay Mới</h5>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label class="form-label fw-bold">Mã Hãng (Viết tắt)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-barcode"></i></span>
                        @Html.EditorFor(model => model.MAHANG, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: VN, VJ, QH...", required = "required" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.MAHANG, "", new { @class = "text-danger small mt-1" })
                </div>
                <div class="mb-4">
                    <label class="form-label fw-bold">Link Ảnh Logo</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-image"></i></span>
                        @Html.EditorFor(model => model.LOGO, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: https://i.imgur.com/abc.png" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.LOGO, "", new { @class = "text-danger" })

                    <div class="mt-2">
                        <img src="@Model.LOGO" id="preview" style="height: 50px; border: 1px solid #ddd; display: @(string.IsNullOrEmpty(Model.LOGO) ? "none" : "block")" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Tên Hãng Hàng Không</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-building"></i></span>
                        @Html.EditorFor(model => model.TENHANG, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Vietnam Airlines", required = "required" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.TENHANG, "", new { @class = "text-danger small mt-1" })
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4 fw-bold">
                        <i class="fas fa-save me-2"></i>Lưu Hãng Bay
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<script>
    document.querySelector('#LOGO').addEventListener('input', function() {
        var url = this.value;
        var img = document.getElementById('preview');
        if(url) {
            img.src = url;
            img.style.display = 'block';
        } else {
            img.style.display = 'none';
        }
    });</script>