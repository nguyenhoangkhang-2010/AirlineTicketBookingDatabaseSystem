@model IEnumerable<AirLineBookingSystemProject_Group03.Models.TUYENBAY>

@{
    ViewBag.Title = "Quản Lý Tuyến Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* STYLE XANH LÁ CHỦ ĐẠO */
    :root {
        --main-green: #198754;
        --light-green: #e8f5e9;
        --hover-green: #f0fff4;
    }

    .card-header-airline {
        background: linear-gradient(135deg, var(--main-green), #146c43);
        color: white;
        padding: 15px 20px;
        border-bottom: 3px solid #0f5132;
    }

    .card-custom {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: var(--hover-green) !important;
        transition: all 0.2s;
    }

    .route-badge {
        font-size: 0.95rem;
        font-weight: bold;
    }

    .flight-path {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #555;
        justify-content: start;
    }

    .flight-icon {
        color: var(--main-green);
        font-size: 1.2rem;
        transform: rotate(45deg);
    }

    .btn-action {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

        .btn-action:hover {
            transform: scale(1.15);
        }
</style>

<div class="container-fluid mt-4">
    <div class="card card-custom">
        <div class="card-header-airline d-flex justify-content-between align-items-center">
            <div>
                <h5 class="m-0 fw-bold text-uppercase"><i class="fas fa-route me-2"></i> DANH SÁCH TUYẾN BAY</h5>
            </div>
            <div>
                <a href="@Url.Action("Create")" class="btn btn-light text-success fw-bold shadow-sm rounded-pill px-3">
                    <i class="fas fa-plus me-1"></i> Thêm Mới
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0 table-hover">
                    <thead class="bg-light text-success fw-bold text-uppercase small">
                        <tr>
                            <th class="ps-4">Mã Tuyến</th>
                            <th>Lộ trình (Đi <i class="fas fa-long-arrow-alt-right"></i> Về)</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted fw-bold">@item.MATUYENBAY</td>
                                <td>
                                    <div class="flight-path">
                                        <div class="text-end" style="min-width: 150px;">
                                            <div class="route-badge text-dark">@item.SANBAY.THANHPHO</div>
                                            <small class="text-muted">(@item.SANBAY.MASANBAY)</small>
                                        </div>

                                        <div class="mx-3 text-center">
                                            <i class="fas fa-plane flight-icon"></i>
                                            <div style="border-bottom: 2px dashed #ccc; width: 40px; margin-top: -10px;"></div>
                                        </div>

                                        <div class="text-start" style="min-width: 150px;">
                                            <div class="route-badge text-dark">@item.SANBAY1.THANHPHO</div>
                                            <small class="text-muted">(@item.SANBAY1.MASANBAY)</small>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">

                                        <a href="@Url.Action("Edit", new { id = item.MATUYENBAY.Trim() })"
                                           class="btn btn-action btn-outline-primary"
                                           title="Sửa thông tin">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        @using (Html.BeginForm("Delete", "TuyenBay", new { id = item.MATUYENBAY.Trim() }, FormMethod.Post, new { id = "form-delete-" + item.MATUYENBAY }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="button" class="btn btn-action btn-outline-danger"
                                                    onclick="confirmDelete('@item.MATUYENBAY')"
                                                    title="Xóa tuyến bay">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    var msg = '@Html.Raw(TempData["Msg"])';
    var err = '@Html.Raw(TempData["Error"])';

    if (msg) Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: msg, showConfirmButton: false, timer: 3000, timerProgressBar: true });
    if (err) Swal.fire({ icon: 'error', title: 'Lỗi!', text: err, confirmButtonColor: '#198754' });

    function confirmDelete(id) {
        Swal.fire({
            title: 'Xóa tuyến bay này?',
            text: "Dữ liệu lịch bay liên quan sẽ bị ảnh hưởng!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Xóa luôn',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) document.getElementById('form-delete-' + id).submit();
        })
    }
</script>