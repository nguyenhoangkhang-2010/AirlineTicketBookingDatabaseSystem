@model AirLineBookingSystemProject_Group03.Models.TUYENBAY

@{
    ViewBag.Title = "Cập Nhật Tuyến Bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-header-airline {
        background: linear-gradient(135deg, #198754, #146c43); /* Gradient Xanh lá */
        color: white;
    }
</style>

<div class="container mt-4" style="max-width: 750px;">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header-airline py-3 border-bottom border-success border-2">
            <h5 class="m-2 fw-bold text-uppercase">
                <i class="fas fa-edit me-2"></i> Cập Nhật Tuyến Bay
            </h5>
        </div>

        <div class="card-body p-4 bg-white">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-4 p-3 bg-light rounded-3 border border-1 text-center">
                    <label class="form-label fw-bold text-secondary text-uppercase small">Mã Tuyến Bay</label>
                    <div class="d-flex justify-content-center">
                        @Html.EditorFor(model => model.MATUYENBAY, new { htmlAttributes = new { @class = "form-control text-center fw-bold fs-4 text-success bg-white border-0 shadow-none", @style = "max-width: 200px;", @readonly = "readonly" } })
                    </div>
                    <small class="text-muted fst-italic">(Không thể thay đổi mã tuyến)</small>
                </div>

                <div class="row align-items-center mb-4">
                    <div class="col-md-5 text-center">
                        <div class="p-3 border rounded-3 shadow-sm h-100">
                            <label class="form-label fw-bold text-success mb-2"><i class="fas fa-plane-departure me-1"></i> ĐIỂM ĐI</label>
                            @Html.DropDownList("MASANBAYDI", null, htmlAttributes: new { @class = "form-select form-select-lg fw-bold text-dark" })
                            @Html.ValidationMessageFor(model => model.MASANBAYDI, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-2 text-center py-3">
                        <i class="fas fa-arrow-right fa-2x text-success d-none d-md-block"></i>
                        <i class="fas fa-arrow-down fa-2x text-success d-block d-md-none"></i>
                    </div>

                    <div class="col-md-5 text-center">
                        <div class="p-3 border rounded-3 shadow-sm h-100">
                            <label class="form-label fw-bold text-success mb-2"><i class="fas fa-plane-arrival me-1"></i> ĐIỂM ĐẾN</label>
                            @Html.DropDownList("MASANBAYVE", null, htmlAttributes: new { @class = "form-select form-select-lg fw-bold text-dark" })
                            @Html.ValidationMessageFor(model => model.MASANBAYVE, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 py-2 fw-bold">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-5 py-2 fw-bold shadow">
                        <i class="fas fa-save me-2"></i> LƯU THAY ĐỔI
                    </button>
                </div>
            }
        </div>
    </div>
</div>