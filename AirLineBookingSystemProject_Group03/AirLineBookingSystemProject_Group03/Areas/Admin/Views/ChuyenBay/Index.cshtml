@model IEnumerable<AirLineBookingSystemProject_Group03.Models.CHUYENBAY>

@{
    ViewBag.Title = "Quản lý chuyến bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-box {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        padding: 20px;
        border-top: 4px solid #1b5e20;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        vertical-align: middle;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .badge-airline {
        background-color: #e8f5e9;
        color: #1b5e20;
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .badge-route {
        background-color: #e3f2fd;
        color: #0d47a1;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        padding: 0;
        line-height: 32px;
        text-align: center;
        border-radius: 50%;
        margin: 0 2px;
        transition: all 0.3s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 5px rgba(0,0,0,0.2);
        }
</style>

<div class="container-fluid mt-4">
    <div class="card-box">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-uppercase mb-0" style="color: #1b5e20;">
                <i class="fas fa-plane-departure me-2"></i> Danh Sách Chuyến Bay
            </h4>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Mã CB</th>
                        <th>Hãng Bay</th>
                        <th>Tuyến Bay</th>
                        <th class="text-center">Số Ghế</th>
                        <th class="text-center">Thời lượng</th>
                        <th>Giờ Đi</th>
                        <th>Giờ Đến</th>
                        <th class="text-center" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold text-dark">
                                @Html.DisplayFor(modelItem => item.MACHUYENBAY)
                            </td>

                            <td>
                                <span class="badge-airline">
                                    <i class="fas fa-plane me-1"></i> @item.MAHANG
                                </span>
                            </td>

                            <td>
                                <span class="badge-route">
                                    @Html.DisplayFor(modelItem => item.MATUYENBAY)
                                </span>
                            </td>

                            <td class="text-center">
                                <span class="text-secondary fw-bold">@item.SOLUONGGHE</span>
                            </td>

                            <td class="text-center">
                                <i class="far fa-clock text-muted"></i> @item.THOIGIANDUNG phút
                            </td>

                            <td>
                                <div class="fw-bold text-success">
                                    @if (item.THOIGIANXUATPHAT.HasValue)
                                    {
                                        @item.THOIGIANXUATPHAT.Value.ToString("HH:mm")
                                    }
                                </div>
                                <small class="text-muted">
                                    @if (item.THOIGIANXUATPHAT.HasValue)
                                    {
                                        @item.THOIGIANXUATPHAT.Value.ToString("dd/MM/yyyy")
                                    }
                                </small>
                            </td>

                            <td>
                                <div class="fw-bold text-primary">
                                    @if (item.THOIGIANDEN.HasValue)
                                    {
                                        @item.THOIGIANDEN.Value.ToString("HH:mm")
                                    }
                                </div>
                                <small class="text-muted">
                                    @if (item.THOIGIANDEN.HasValue)
                                    {
                                        @item.THOIGIANDEN.Value.ToString("dd/MM/yyyy")
                                    }
                                </small>
                            </td>

                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.MACHUYENBAY.Trim() })" class="btn btn-outline-primary btn-action" title="Sửa">
                                    <i class="fas fa-pen font-size-12"></i>
                                </a>

                                <a href="@Url.Action("Details", new { id = item.MACHUYENBAY.Trim() })" class="btn btn-outline-info btn-action" title="Chi tiết">
                                    <i class="fas fa-info font-size-12"></i>
                                </a>

                                <a href="@Url.Action("Delete", new { id = item.MACHUYENBAY.Trim() })" class="btn btn-outline-danger btn-action" title="Xóa">
                                    <i class="fas fa-trash font-size-12"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p>Chưa có chuyến bay nào.</p>
            </div>
        }
    </div>
</div>