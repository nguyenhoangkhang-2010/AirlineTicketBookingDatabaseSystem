@model AirLineBookingSystemProject_Group03.Models.CreateFlightViewModel

@{
    ViewBag.Title = "Thêm Chuyến Bay Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-plane-departure me-2"></i> Thiết Lập Chuyến Bay Mới</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h6 class="text-secondary border-bottom pb-2 mb-3">Thông Tin Hành Trình</h6>
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Mã Chuyến Bay</label>
                    @Html.TextBoxFor(m => m.MaChuyenBay, new { @class = "form-control", @placeholder = "VD: VN123", @required = "required" })
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Hãng Bay</label>
                    @Html.DropDownListFor(m => m.MaHang, (SelectList)ViewBag.MaHang, "--- Chọn Hãng ---", new { @class = "form-select", @required = "required" })
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Tuyến Bay</label>
                    @Html.DropDownListFor(m => m.MaTuyenBay, (SelectList)ViewBag.MaTuyenBay, "--- Chọn Tuyến ---", new { @class = "form-select", @required = "required" })
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Thời Gian Bay (Phút)</label>
                    @Html.TextBoxFor(m => m.ThoiGianBay, new { @class = "form-control", @type = "number", @min = "30", @required = "required" })
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Ngày Khởi Hành</label>
                    <input type="date" name="strNgayDi" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Giờ Khởi Hành</label>
                    <input type="time" name="strGioDi" class="form-control" required />
                </div>
            </div>

            <h6 class="text-secondary border-bottom pb-2 mb-3 mt-5">Cấu Hình Giá Vé & Số Ghế</h6>
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 20%">Hạng Vé</th>
                            <th style="width: 20%">Đối Tượng</th>
                            <th>Giá Vé (VNĐ)</th>
                            <th style="width: 15%">Số Ghế Phân Bổ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Dùng vòng lặp for để Binding được List về Controller *@
                        @for (int i = 0; i < Model.PriceList.Count; i++)
                        {
                            @Html.HiddenFor(m => m.PriceList[i].MaHangVe)
                            @Html.HiddenFor(m => m.PriceList[i].TenHangVe)
                            @Html.HiddenFor(m => m.PriceList[i].MaLoaiVe)
                            @Html.HiddenFor(m => m.PriceList[i].TenLoaiVe)

                            <tr>
                                <td class="fw-bold text-success">
                                    @Model.PriceList[i].TenHangVe
                                </td>

                                <td>
                                    @if (Model.PriceList[i].MaLoaiVe == "ADT")
                                    {<span class="badge bg-primary">Người lớn</span> }
                                    else if (Model.PriceList[i].MaLoaiVe == "CHD")
                                    { <span class="badge bg-info text-dark">Trẻ em</span> }
                                    else
                                    { <span class="badge bg-warning text-dark">Em bé</span>}
                                </td>

                                <td>
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.PriceList[i].Gia, new { @class = "form-control", @type = "number", @min = "0" })
                                        <span class="input-group-text">đ</span>
                                    </div>
                                </td>

                                <td>
                                    @if (Model.PriceList[i].MaLoaiVe == "ADT")
                                    {
                                        @Html.TextBoxFor(m => m.PriceList[i].SoLuongGhe, new { @class = "form-control", @type = "number", @min = "0" })
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">Dùng chung ghế người lớn</span>
                                        @Html.HiddenFor(m => m.PriceList[i].SoLuongGhe)
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("ManageFlights")" class="btn btn-secondary me-2">Hủy Bỏ</a>
                <button type="submit" class="btn btn-success px-5 fw-bold">
                    <i class="fas fa-save me-2"></i> LƯU CHUYẾN BAY
                </button>
            </div>
        }
    </div>
</div>