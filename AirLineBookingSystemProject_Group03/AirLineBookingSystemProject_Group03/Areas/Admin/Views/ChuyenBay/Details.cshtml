@model AirLineBookingSystemProject_Group03.Models.FlightDetailsEditViewModel

@{
    ViewBag.Title = "Chi tiết chuyến bay";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var cb = Model.ChuyenBay;
}

<div class="container mt-4">
    <div class="card shadow border-0 mb-4">
        <div class="card-header bg-success text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0"><i class="fas fa-info-circle me-2"></i>Chi Tiết Chuyến Bay: @cb.MACHUYENBAY</h5>
            <span class="badge bg-white text-success">@cb.HANGHANGKHONG.TENHANG</span>
        </div>

        <div class="card-body">
            <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2">1. Thông tin hành trình</h6>
            <div class="row text-center mb-4">
                <div class="col-md-5">
                    <div class="fs-3 fw-bold text-dark">@cb.TUYENBAY.SANBAY.THANHPHO</div>
                    <div class="badge bg-light text-secondary border">@cb.TUYENBAY.SANBAY.MASANBAY</div>
                    <div class="fs-4 text-success mt-2">@cb.THOIGIANXUATPHAT.Value.ToString("HH:mm")</div>
                    <div class="small text-muted">@cb.THOIGIANXUATPHAT.Value.ToString("dd/MM/yyyy")</div>
                </div>

                <div class="col-md-2 d-flex flex-column justify-content-center align-items-center">
                    <div class="text-muted small mb-1">@cb.THOIGIANDUNG phút</div>
                    <i class="fas fa-plane fa-2x text-success"></i>
                    <i class="fas fa-long-arrow-alt-right fa-2x text-secondary"></i>
                </div>

                <div class="col-md-5">
                    <div class="fs-3 fw-bold text-dark">@cb.TUYENBAY.SANBAY1.THANHPHO</div>
                    <div class="badge bg-light text-secondary border">@cb.TUYENBAY.SANBAY1.MASANBAY</div>
                    <div class="fs-4 text-primary mt-2">@cb.THOIGIANDEN.Value.ToString("HH:mm")</div>
                    <div class="small text-muted">@cb.THOIGIANDEN.Value.ToString("dd/MM/yyyy")</div>
                </div>
            </div>

            <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2 mt-5">2. Chi tiết Giá vé & Số lượng ghế</h6>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>Hạng Vé</th>
                            <th>Đối Tượng</th>
                            <th class="text-end">Giá Niêm Yết</th>
                            <th class="text-center">Số Ghế Phân Bổ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PriceList)
                        {
                            <tr>
                                <td class="fw-bold text-success">@item.TenHangVe</td>
                                <td>
                                    @if (item.MaLoaiVe == "ADT")
                                    {<span class="badge bg-primary">Người lớn</span> }
                                    else if (item.MaLoaiVe == "CHD")
                                    { <span class="badge bg-info text-dark">Trẻ em</span> }
                                    else
                                    { <span class="badge bg-warning text-dark">Em bé</span>}
                                </td>
                                <td class="text-end fw-bold">@item.Gia.ToString("#,##0") VNĐ</td>
                                <td class="text-center">
                                    @if (item.MaLoaiVe == "ADT")
                                    {
                                        <span class="badge bg-secondary fs-6">@item.SoLuongGhe</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">--</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Tổng số ghế chuyến bay:</td>
                            <td class="text-center fw-bold text-danger fs-5">@cb.SOLUONGGHE</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white py-3 d-flex justify-content-end gap-2">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            <a href="@Url.Action("Edit", new { id = cb.MACHUYENBAY.Trim() })" class="btn btn-primary">
                <i class="fas fa-pen me-2"></i>Chỉnh sửa
            </a>
        </div>
    </div>
</div>