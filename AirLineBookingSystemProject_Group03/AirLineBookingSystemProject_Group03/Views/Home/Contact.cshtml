@{
    ViewBag.Title = "Liên hệ";
}

@section styles {
    <style>

        .contact-page-wrapper {
            position: relative;
            border-radius: 8px; 
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .contact-section {
            position: relative;
            background-image: url('@Url.Content("~/IMG/bgContact.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 60px 0;
            min-height: 80vh; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .contact-overlay {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: linear-gradient(to bottom right, rgba(5, 30, 20, 0.85), rgba(27, 94, 32, 0.9)); /* Tông xanh lá đậm theo theme */
            z-index: 1;
        }

        .contact-content {
            position: relative;
            z-index: 2;
        }

        .contact-info h2 {
            color: #fff;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 25px;
            color: rgba(255, 255, 255, 0.9);
        }

        .icon-box {
            min-width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 18px;
            color: #fff;
            transition: 0.3s;
        }

        .info-item:hover .icon-box {
            background: #fff;
            color: #1b5e20; /* Màu xanh chủ đạo */
        }

        .text-box span {
            display: block;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 3px;
        }

        .text-box p, .text-box a {
            font-size: 1rem;
            margin: 0;
            color: #fff;
            text-decoration: none;
            font-weight: 500;
        }

        /* CỘT PHẢI - FORM CARD */
        .contact-form-wrapper {
            background: #fff;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        .contact-form-wrapper h3 {
            color: #1b5e20;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 5px;
        }

        .custom-input-box {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            transition: 0.3s;
            color: #333;
            background: #f9f9f9;
        }

        .custom-input-box:focus {
            border-color: #1b5e20;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(27, 94, 32, 0.1);
        }

        .btn-submit {
            background-color: #1b5e20;
            color: #fff;
            border: none;
            padding: 12px 0;
            font-weight: 700;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 15px;
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-submit:hover {
            background-color: #2e7d32;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(27, 94, 32, 0.3);
        }
    </style>
}

<div class="contact-page-wrapper">
    <div class="contact-section">
        <div class="contact-overlay"></div>

        <div class="container contact-content">
            <div class="row justify-content-center align-items-center">

                <div class="col-lg-6 mb-5 mb-lg-0 px-4">
                    <div class="contact-info">
                        <h2>Thông tin liên hệ</h2>
                        <p class="text-white mb-4" style="opacity: 0.8;">Chúng tôi luôn sẵn sàng hỗ trợ bạn 24/7. Hãy liên hệ với SkyBooker qua các kênh dưới đây.</p>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="text-box">
                                <span>Địa chỉ:</span>
                                <p>123 Đường Nguyễn Văn Linh, Quận 7, TP. Hồ Chí Minh</p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="fas fa-phone-alt"></i>
                            </div>
                            <div class="text-box">
                                <span>Điện thoại:</span>
                                <p><a href="tel:19001234">1900 1234</a></p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="text-box">
                                <span>Email:</span>
                                <p><a href="mailto:support@skybooker.vn">support@skybooker.vn</a></p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="fas fa-globe"></i>
                            </div>
                            <div class="text-box">
                                <span>Website:</span>
                                <p><a href="#">www.skybooker.vn</a></p>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-5 offset-lg-1">
                    <div class="contact-form-wrapper">
                        <h3>Gửi tin nhắn</h3>

                        <form onsubmit="event.preventDefault(); alert('Cảm ơn bạn đã liên hệ! Đây là giao diện demo.');">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Họ và Tên</label>
                                    <input type="text" class="custom-input-box" placeholder="Nhập họ tên của bạn">
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="custom-input-box" placeholder="Nhập địa chỉ Email">
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Tiêu đề</label>
                                    <input type="text" class="custom-input-box" placeholder="Vấn đề cần hỗ trợ">
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Nội dung tin nhắn</label>
                                    <textarea class="custom-input-box" rows="4" placeholder="Nhập nội dung..."></textarea>
                                </div>

                                <div class="col-md-12">
                                    <button type="submit" class="btn-submit">
                                        <i class="fas fa-paper-plane me-2"></i> Gửi Tin Nhắn
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>