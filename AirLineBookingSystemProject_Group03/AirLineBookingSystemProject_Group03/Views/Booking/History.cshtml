@model IEnumerable<AirLineBookingSystemProject_Group03.Models.LichSuDatVeViewModel>

@{
    ViewBag.Title = "Lịch sử vé đã thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">Lịch sử giao dịch</h2>
    <hr />

    <table class="table table-hover shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Mã đặt vé</th>
                <th>Ngày đặt</th>
                <th>Chuyến bay</th>
                <th>Hành trình</th>
                <th>Số vé</th>
                <th>Tổng tiền</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.MaDatVe</strong></td>
                    <td>@string.Format("{0:dd/MM/yyyy}", item.NgayDat)</td>
                    <td>
                        <span class="font-weight-bold text-dark">@item.MaChuyenBay</span><br />
                        <small>@string.Format("{0:HH:mm dd/MM}", item.GioBay)</small>
                    </td>
                    <td>
                        @item.TenSanBayDi <i class="fa fa-arrow-right"></i> @item.TenSanBayDen
                    </td>
                    <td class="text-center">@item.SoLuongVe</td>
                    <td class="text-success font-weight-bold">
                        @string.Format("{0:0,0} VNĐ", item.TongTien)
                    </td>
                    <td>
                        <a href="@Url.Action("BookingDetails", "Booking", new { id = item.MaDatVe })" class="btn btn-sm btn-outline-primary">
                            Xem vé
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Bạn chưa có lịch sử đặt vé nào đã thanh toán.
        </div>
    }
</div>